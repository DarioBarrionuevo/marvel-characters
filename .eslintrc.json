{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["react", "@typescript-eslint", "prettier"],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser", // Usamos el parser para TypeScript
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "prettier/prettier": "error", // Hace que los errores de Prettier se traten como errores en ESLint
    "react/react-in-jsx-scope": "off", // Next.js no requiere React en el scope de cada componente
    "react/jsx-uses-react": "off", // Next.js no necesita React explícitamente
    "react/jsx-uses-vars": "error", // Asegura que las variables JSX sean usadas correctamente
    "@typescript-eslint/explicit-module-boundary-types": "off", // Desactiva la necesidad de definir tipos explícitos en las funciones de módulo
    "@typescript-eslint/no-explicit-any": "warn" // Te advierte sobre el uso de "any" en TypeScript
  },
  "ignorePatterns": ["node_modules", ".next", "out"], // Archivos y carpetas a ignorar
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"], // Para archivos TypeScript (.ts y .tsx)
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "off" // Puedes modificar esta regla según tus necesidades
      }
    }
  ]
}
